{% extends 'base.html.twig' %}

{% block body %}
    <h1>Integrity</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ integrity.id }}</td>
            </tr>
            <tr>
                <th>Ownerid</th>
                <td>{{ integrity.ownerId }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ integrity.category }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ integrity.timestamp }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ integrity.name }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ integrity.place }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ integrity.content }}</td>
            </tr>
            <tr>
                <th>Cert</th>
                <td>{{ integrity.cert }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('integrity_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('integrity_edit', { 'id': integrity.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
